<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_class_subject_color"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:background="#FFF000" />

            <TableLayout

                >

                <TableRow
                    android:layout_marginLeft="4dp"
                    >

                    <TextView
                        android:id="@+id/view_class_subject_id"
                        android:text="ID"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        />
                    <TextView
                        android:id="@+id/view_class_subject_name"
                        android:layout_width="250dp"
                        android:layout_column="2"
                        android:layout_marginLeft="5dp"
                        android:text="Subject: Module"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/view_class_subject_teacher"
                        android:layout_width="wrap_content"
                        android:layout_column="3"
                        android:layout_marginLeft="50dp"
                        android:text="Teacher"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="6dp">

                    <TextView
                        android:layout_span="3"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/view_class_subject_time"
                        android:text="TIME" />
                </TableRow>
            </TableLayout>

        </TableRow>
    </TableLayout>
</LinearLayout>
