<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_exam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nirav.mystudylife.AddExamActivity"
    tools:showIn="@layout/activity_add_exam">

    <TableLayout
        android:stretchColumns="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>
            <Spinner
                android:id="@+id/add_new_exam_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

            </Spinner>
        </TableRow>

        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_marginRight="10dp"
                android:hint="Module"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Select Date"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Select Time"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter Duration"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="10"
                android:hint="Seat Number"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginBottom="5dp"
            />

        <TableRow>
            <EditText
                android:id="@+id/add_new_exam_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="6"
                android:hint="Room"
                android:textSize="22dp"
                />
        </TableRow>
        <View
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            />

        <TableRow>
            <Button
                android:id="@+id/add_exam_new_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="SAVE"

                />
        </TableRow>

        <View
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#000000"
            />

    </TableLayout>

</LinearLayout>
