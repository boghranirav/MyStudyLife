<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_single_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nirav.mystudylife.ViewSingleClassActivity"
    tools:showIn="@layout/activity_view_single_class">

    <TableLayout
        android:id="@+id/table_classes_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AAAAAA"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/view_class_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Subject Module"
                android:textColor="#FFFFFF"
                android:textSize="34dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/view_class_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  2016-2017"
                android:textColor="#FFFFFF"
                android:textSize="28dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="Time "
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_class_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="7"
                    android:text="Time"
                    android:textColor="#000000"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="Location "
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_class_building"
                    android:layout_width="0dp"
                    android:layout_column="1"
                    android:layout_weight="7"
                    android:text="Loaction"
                    android:textColor="#000000"
                    android:textSize="24dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="Teacher "
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_class_teacher"
                    android:layout_width="0dp"
                    android:layout_column="1"
                    android:layout_weight="7"
                    android:text="Teacher"
                    android:textColor="#000000"
                    android:textSize="24dp" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#000000" />

            <TableRow>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_span="2"
                    android:text="Tasks for this subject"
                    android:textColor="#1b05bc"
                    android:textSize="24dp" />
            </TableRow>


            <TableRow>

                <ListView
                    android:id="@+id/view_class_tasks_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2">

                </ListView>
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#000000" />

            <TableRow>

                <Button
                    android:id="@+id/view_class_task_edit"
                    android:layout_span="2"
                    android:text="EDIT"
                    android:textSize="24dp" />
            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#000000" />
        </TableLayout>


    </ScrollView>

</LinearLayout>
